import UIKit

public struct BPKFontStyle {
    public let font: UIFont
    public let letterSpacing: CGFloat
    public let lineHeight: CGFloat
}

public extension BPKFontStyle {
    {% for f in font %}
    /// Represents font size {{f.size}} with weight {{f.swiftuiWeight}}.
    static let {{f.swiftuiName}} = BPKFontStyle(
        font: .{{f.swiftuiWeight}}(size:{{f.size}}),
        letterSpacing: {% if f.letterSpacing != null -%}{{f.letterSpacing.value}}{% else -%}0{% endif %},
        lineHeight: {% if f.lineHeight != null -%}{{f.lineHeight.value}}{% else -%}0{% endif %}
    )
{% endfor %}
}
